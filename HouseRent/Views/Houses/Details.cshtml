@model HouseRent.Models.House

@{
    ViewData["Title"] = "Szczegóły";
}

<div class="col-6">
    <h1 class="text-info">Szczegóły</h1>
</div>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nazwa
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nazwa)
        </dd>
        <dt class="col-sm-2">
            Adres
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Adres)
        </dd>
        <dt class="col-sm-2">
            Ilość osób
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ilosc_osob)
        </dd>
        <dt class="col-sm-2">
            Cena za dobę [PLN]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cena_za_dobe)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edytuj</a> |
    <a asp-action="Index">Wróć do listy domków</a>
</div>
