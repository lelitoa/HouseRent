@model HouseRent.Models.House

@{
    ViewData["Title"] = "Usuwanie";
}

<div class="col-6">
    <h1 class="text-info">Usuwanie</h1>
    <h3>Czy napewno chcesz usunąć ten domek?</h3>
</div>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nazwa
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nazwa)
        </dd>
        <dt class = "col-sm-2">
            Adres
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Adres)
        </dd>
        <dt class = "col-sm-2">
            Ilość osób
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ilosc_osob)
        </dd>
        <dt class="col-sm-2">
            Cena za dobę [PLN]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cena_za_dobe)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">Wróć do listy domków</a>
    </form>
</div>
